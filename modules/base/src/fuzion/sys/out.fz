# fuzion.sys.out -- unit type grouping routines to print to stdout
#
module out : encodings is

  module print(s Any) =>
    write s.as_string.utf8.as_array

  module println(s Any) =>
    write (s.as_string.utf8 ++ [ascii.lf]).as_array

  module println =>
    write [ascii.lf]

  module fzE_file_stdout fuzion.sys.Pointer => native

  write(arr array u8) =>
    _ := fuzion.sys.fileio.write fzE_file_stdout arr
    _ := fuzion.sys.fileio.fzE_file_flush fzE_file_stdout

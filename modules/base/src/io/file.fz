  module:public file_mutate : mutate is

  public writer(wh io.Write_Handler, buf_size i32) : (io.buffered file_mutate).writer wh buf_size is
  public reader(rh io.Read_Handler, buf_size i32) : (io.buffered file_mutate).reader rh buf_size is


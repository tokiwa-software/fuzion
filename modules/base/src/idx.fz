#
# -----------------------------------------------------------------------

# idx is a choice to be used by index [] features
#
# this allows convenient index access via any
# integer type (i8,...,u64) without manual conversion
#
# The compiler is expected to specialize this in most cases
# making this tagging unecessary.
#
public idx : choice i8 u8 i16 u16 i32 u32 i64 u64 is

  public as_i32 i32 =>
    match idx.this
      n i8  => n.as_i32
      n u8  => n.as_i32
      n i16 => n.as_i32
      n u16 => n.as_i32
      n i32 => n
      n u32 => n.as_i32
      n i64 => n.as_i32
      n u64 => n.as_i32

  public as_i64 i64 =>
    match idx.this
      n i8  => n.as_i64
      n u8  => n.as_i64
      n i16 => n.as_i64
      n u16 => n.as_i64
      n i32 => n.as_i64
      n u32 => n.as_i64
      n i64 => n
      n u64 => n.as_i64

  public as_u64 u64 =>
    match idx.this
      n i8  => n.as_u64
      n u8  => n.as_u64
      n i16 => n.as_u64
      n u16 => n.as_u64
      n i32 => n.as_u64
      n u32 => n.as_u64
      n i64 => n.as_u64
      n u64 => n


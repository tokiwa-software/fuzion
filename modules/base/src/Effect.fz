# Effect -- interface to an effect
#
module:public Effect ref is


  # infix variant instate_self
  #
  # use it like this:
  #
  #     effect_instance ! ()->code
  #
  public infix !(# result type
                 R type,

                 # the code to execute with `e` instated.
                 code () -> R
  ) R
  => abstract

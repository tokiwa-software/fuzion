# units.byte_unit_iec -- unit type defining units used for units.data_size
#
public byte_unit_iec(
            # the next smaller unit, like kibibyte is smaller than mebibyte, if it exists
            public smaller Lazy (option byte_unit_iec),

            # the next larger unit, like gibibyte is larger than mebibyte, if it exists
            public larger  Lazy (option byte_unit_iec),

            # the number of bytes in one of this unit
            public in_bytes u128,

            # a short name of at most three codepoints
            public short_name String,

            # a longer, but still short name of this unit
            public name String) is

  # byte unit
  #
  public type.b   units.byte_unit_iec => units.byte_unit_iec nil kib 1.as_u128            "B"   "byte"

  # kibibyte unit
  #
  public type.kib units.byte_unit_iec => units.byte_unit_iec b   mib 2.as_u128**10.as_u128  "KiB" "kibibyte"

  # mebibyte unit
  #
  public type.mib units.byte_unit_iec => units.byte_unit_iec kib gib 2.as_u128**20.as_u128  "MiB" "mebibyte"

  # gibibyte unit
  #
  public type.gib units.byte_unit_iec => units.byte_unit_iec mib tib 2.as_u128**30.as_u128  "GiB" "gibibyte"

  # tebibyte unit
  #
  public type.tib units.byte_unit_iec => units.byte_unit_iec gib pib 2.as_u128**40.as_u128  "TiB" "tebibyte"

  # pebibyte unit
  #
  public type.pib units.byte_unit_iec => units.byte_unit_iec tib eib 2.as_u128**50.as_u128  "PiB" "pebibyte"

  # exbibyte unit
  #
  public type.eib units.byte_unit_iec => units.byte_unit_iec pib zib 2.as_u128**60.as_u128  "EiB" "exbibyte"

  # zebibyte unit
  #
  public type.zib units.byte_unit_iec => units.byte_unit_iec eib yib 2.as_u128**70.as_u128  "ZiB" "zebibyte"

  # yobibyte unit
  #
  public type.yib units.byte_unit_iec => units.byte_unit_iec zib rib 2.as_u128**80.as_u128  "YiB" "yobibyte"

  # robibyte unit
  #
  public type.rib units.byte_unit_iec => units.byte_unit_iec yib qib 2.as_u128**90.as_u128  "RiB" "robibyte"

  # quebibyte unit
  #
  public type.qib units.byte_unit_iec => units.byte_unit_iec rib nil 2.as_u128**100.as_u128 "QiB" "quebibyte"

# units.byte_unit_si -- unit type defining units used for units.data_size
#
public byte_unit_si(
            # the next smaller unit, like kilobyte is smaller than megabyte, if it exists
            public smaller Lazy (option byte_unit_si),

            # the next larger unit, like gigabyte is larger than megabyte, if it exists
            public larger  Lazy (option byte_unit_si),

            # the number of bytes in one of this unit
            public in_bytes u64,

            # a short name of at most three codepoints
            public short_name String,

            # a longer, but still short name of this unit
            public name String) is

  # byte unit
  #
  public type.b units.byte_unit_si  => units.byte_unit_si nil kb  1             "B"  "byte"

  # kilobyte unit
  #
  public type.kb units.byte_unit_si => units.byte_unit_si b   mb  (u64 1E3)**1  "kB" "kilobyte"

  # megabyte unit
  #
  public type.mb units.byte_unit_si => units.byte_unit_si kb  gb  (u64 1E3)**2  "MB" "megabyte"

  # gigabyte unit
  #
  public type.gb units.byte_unit_si => units.byte_unit_si mb  tb  (u64 1E3)**3  "GB" "gigabyte"

  # terabyte unit
  #
  public type.tb units.byte_unit_si => units.byte_unit_si gb  pb  (u64 1E3)**4  "TB" "terabyte"

  # petabyte unit
  #
  public type.pb units.byte_unit_si => units.byte_unit_si tb  eb  (u64 1E3)**5  "PB" "petabyte"

  # exabyte unit
  #
  public type.eb units.byte_unit_si => units.byte_unit_si pb  zb  (u64 1E3)**6  "EB" "exabyte"

  # zettabyte unit
  #
  public type.zb units.byte_unit_si => units.byte_unit_si eb  yb  (u64 1E3)**7  "ZB" "zettabyte"

  # yottabyte unit
  #
  public type.yb units.byte_unit_si => units.byte_unit_si zb  rb  (u64 1E3)**8  "YB" "yottabyte"

  # ronnabyte unit
  #
  public type.rb units.byte_unit_si => units.byte_unit_si yb  qb  (u64 1E3)**9  "RB" "ronnabyte"

  # quettabyte unit
  #
  public type.qb units.byte_unit_si => units.byte_unit_si rb  nil (u64 1E3)**10 "QB" "quettabyte"

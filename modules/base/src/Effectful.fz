# a Effectful is a special type of unary that takes
# a Function R and produces a value R.
#
module:public Effectful(R type) ref : Unary R (Function R) is


  # infix variant of call
  #
  public infix ! (code ()->R) R =>
    call code


  # NYI: UNDER DEVELOPMENT: name compose might be misleading?
  #
  # compose this Effectful with another Effectful
  #
  public compose(other Effectful R) Effectful R =>
    _ : Effectful R is
      public redef call(code Function R) R =>
        Effectful.this.call ()->
          other.call code


  # fluent interface for using multiple effects together
  #
  public and(E type: effect, e Lazy E) Effectful R =>
    compose (e.as_effectful R)

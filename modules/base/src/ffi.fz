# unit feature grouping foreign function interface related features
#
public ffi is

  # returns a NULL Pointer
  #
  public null =>
    fzE_null

  # test if p is the NULL pointer
  #
  public is_null(p fuzion.sys.Pointer) =>
    fzE_is_null p = 0


  strlen(str fuzion.sys.Pointer) i32 => native


  public from_c_string(x fuzion.sys.Pointer) String =>
    ref : String
      redef utf8 Sequence u8 =>
        array (fuzion.sys.internal_array u8 x (strlen x)) unit unit unit


  public from_array_of_pointers(T type, x fuzion.sys.Pointer, len i32) array T =>
    array (fuzion.sys.internal_array T x len) unit unit unit


  # NYI: what else do we need? strlen, from_c_string, from_c_struct, from_c_array

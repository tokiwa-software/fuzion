# HTTP response message
#
module:public response_msg(
  # the request message for which this response was generated
  public req option http.request_msg,
  # the major version
  public version_major i32,
  # the minor version
  public version_minor i32,
  # the status code of the response
  public status_code i32,
  # the reason-phrase of the response
  public reason_phrase String,
  # the header fields
  public redef header container.Map String String,
  # the body of the response
  public redef body io.Read_Handler) : Message
is
  # the start line of the message, for a response this is also called status line
  public redef start_line String => status_line

  # the status line of the response message
  public status_line String =>
    "{version_str version_major version_minor} $status_code $reason_phrase$crlf"


  public type.new(
    # the request message for which this response was generated
    req option http.request_msg,
    # the major version
    version_major i32,
    # the minor version
    version_minor i32,
    # the status code of the response
    status_code i32,
    # the reason-phrase of the response
    reason_phrase String,
    # the header fields
    header array (String,String),
    # the body of the response
    body io.Read_Handler) http.response_msg
  =>
    http.response_msg req version_major version_minor status_code reason_phrase (as_map header) body

# nom.branch -- choice combinators
#
public branch is

  # return result of first succeeding parser
  public alt(I, R, O type, p array (parser I R O)) parser I R O is
    parser I R O (input ->
      p
        .map_sequence (p -> p.parse input)
        .filter (r -> match r
                        success => true
                        error => false)
        .first (error "alt: no parser successful")
    )



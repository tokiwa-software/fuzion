# GET url via ipv4 using standard ssl port
#
public get4(url String) outcome String =>
  p u16 := if (parse_url url).0 then 443 else 80
  get net.family.ipv4 p url


# GET url via ipv6 using standard ssl port
#
public get6(url String) outcome String =>
  p u16 := if (parse_url url).0 then 443 else 80
  get net.family.ipv6 p url


# eagerly get an url via http(s), return response as a String
#
public get(family net.family.val, port u16, url String) outcome String =>

  use_https, host, target := parse_url url

  request_message =>
    http
      .request_message
      .new http.get target 1 1 [("Host", host)]

  do_request family port use_https host request_message

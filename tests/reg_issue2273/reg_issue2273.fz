open, closed.
door : choice open closed is
  toggle door => match door.this
    open   => closed
    closed => open
  redef as_string =>  match door.this
    open   => "open"
    closed => "closed"

d := (mutate.array door).new mutate 100 closed
for i in 0..99 do
  for j in i..99 do
    d[j] := d[j].toggle
say d

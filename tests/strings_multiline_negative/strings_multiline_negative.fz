strings_multiline_negative is

  x := 1

  a := """"""    //  1. should flag an error: Expected multiline string to start in first line following fat quotation
  b := """ """   //  2. should flag an error: Expected multiline string to start in first line following fat quotation

                 //  3. should NYI flag NYI an NYI error: (error in line 32) Expected multiline string to start in first line following fat quotation
  c := """

  c
  """

  d := """
  $x
 d              //  4. should flag an error: Found codepoint at less indentation than expected in multiline string.
  """

  e := """
  hello
  """
  //   ^  5. should NYI flag NYI an NYI error: (error in line 43) Illegal trailing whitespace in multiline string.

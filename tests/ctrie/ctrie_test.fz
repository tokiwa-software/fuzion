ctrie_test is
  ctrie := (container.ctrie i32 String).type.empty

  all := container.ps_set 0..100
  removed := container.ps_set 0..100:2
  readded := container.ps_set 0..100:3

  no_items := ctrie.snapshot true

  for k in all do
    ctrie.add k "v$k"

  all_items := ctrie.snapshot true

  for k in removed do
    ctrie.remove k

  half_of_items := ctrie.snapshot true

  for k in readded do
    ctrie.add k "v$k"

  # NYI Set should have `except()` feature
  no  := removed.filter (x -> !(readded.contains x))
  yes := (container.ps_set (all.filter (x -> !(removed.contains x)))) ∪ readded

  say (no  ∀ (k -> (ctrie.lookup k).is_nil))

  say (yes ∀ (k -> (ctrie.lookup k).get = "v$k"))

  say (ctrie.size = yes.size)

  say no_items.items.count # 0

  say all_items.items.count # 101

  say half_of_items.items.count # 50

# This tests calls to functions and constructors declared in value or ref
# features that are called on targets that are value, ref or boxed types.
#
calls is

  passed := mut 0
  failed := mut 0

  chck(str, expected String) =>
    if str â‰Ÿ expected
      say "PASSED: $str"
      passed <- passed.get + 1
    else
      say "FAILED: $str /= $expected"
      failed <- failed.get + 1
      _ := set_exit_code 1


  caseC3 is
    #    * constructor
    #      * declared for value
    #        * called on boxed
    #          - *** error ***

    ron ref is

    on : ron is
      cnt := mut 0
      f is
        cnt <- cnt.get + 1
        s := "f#$cnt in $where type {on.this.type.name}"
      where => "on"

    roa ref : on is

    oa : roa is
      redef where => "oa"

    oa1 ron => on
    oa2 ron => oa

    t := oa1
    yak "caseC3a: "; chck t.f.s "f#1 in oa type calls.caseC2.oa"     // 01. should flag an error:
    yak "caseC3a: "; chck t.f.s "f#2 in oa type calls.caseC2.oa"     // 02. should flag an error:
    yak "caseC3a: "; chck t.f.s "f#3 in oa type calls.caseC2.oa"     // 03. should flag an error:
    yak "caseC3a: "; chck $t.cnt.get $3                              // 04. should flag an error:

    t := oa2
    yak "caseC3b: "; chck t.f.s "f#1 in on type calls.caseC2.on"     // 05. should flag an error:
    yak "caseC3b: "; chck t.f.s "f#2 in on type calls.caseC2.on"     // 06. should flag an error:
    yak "caseC3b: "; chck t.f.s "f#3 in on type calls.caseC2.on"     // 07. should flag an error:
    yak "caseC3b: "; chck $t.cnt.get $3                              // 08. should flag an error:

  caseC3


  say "{failed.get} failed {passed.get} passed."
  exit

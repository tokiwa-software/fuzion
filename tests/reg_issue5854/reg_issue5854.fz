man_or_boy2 is

  a(k0 i32, x1, x2, x3, x4, x5 () -> i32) =>
    k := mut k0
    b => k <- k.get - 1; a k.get (() -> b) x1 x2 x3 x4
    k.get <= 0 ? x4() + x5() : b

  K(n i32) () -> i32 => () -> n

  (0..10).for_each n->
    say "manorboy a($n) = {a n (K 1) (K -1) (K -1) (K 1) (K 0)}"

reg_issue5904 =>
  find(a array i32, v i32) option i32 =>
    for e in a
    until e=v then v
              else nil

  find2(a array i32, v i32) option i32 =>
    for
      i := 0, i+1
    while i < a.length
    until a[i]=v
      a[i]
    else
      nil

  say (find [4] 4)
  say (find2 [4] 4)

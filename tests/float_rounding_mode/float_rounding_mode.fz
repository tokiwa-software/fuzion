float_rounding_mode =>

  test =>
    test(a, b f64) => say "{a.as_string.pad 19}  $b"

    test ((1.0/3.0)*3.0) ((-1.0/3.0)*3.0)
    test ((2.0/3.0)*3.0) ((-2.0/3.0)*3.0)
    test (1.0 / 3.0)     (-1.0 / 3.0)
    test (2.0 / 3.0)     (-2.0 / 3.0)
    test (2.0 ** 3.0)    (-2.0 ** 3.0)
    test (3.0 ** 2.0)    (-3.0 ** 2.0)


  say "\nTO NEAREST"
  _ := float_rounding.to_nearest ()->test

  say "\nDOWNWARD"
  _ := float_rounding.downward ()->test

  say "\nUPWARD"
  _ := float_rounding.upward ()->test

  say "\nTOWARD ZERO"
  _ := float_rounding.toward_zero ()->test

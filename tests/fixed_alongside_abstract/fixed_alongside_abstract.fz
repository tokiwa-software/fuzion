fixed_alongside_abstract =>

  a is
    me a.this => abstract
    fixed me => a
    public redef as_string String => $"a"

  say a.me

  ex_issue1507 is

    A is
      me A.this => abstract
      fixed me => A
      public redef as_string String => "A "

    B(s String) : A is
      redef fixed me => (B "new")
      public redef as_string String => "B$s"

    say A.me
    say (B "orig").me
  ex_issue1507

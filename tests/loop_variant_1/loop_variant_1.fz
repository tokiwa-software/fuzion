# Loop variants of wrong type
#
loop_variant_1 =>

  test_1 is
    for i in (0..10)
    variant "bla"    # 1. should flag an error: wrong type of variant
    do
      say "i=$i"


  test_2 is
    for i in (0..10)
    variant foo      # 2. should flag an error: feature not found
    do
      say "i=$i"


  test_3 is
    for i in (0..10)
    variant 0.1      # 3. should flag an error: wrong type of variant
    do
      say "i=$i"


  test_4 is
    n := 10

    for i in (0..n)
    variant (n-i)    # 4. should flag an error: wrong type of variant
    do
      say "i=$i"


  test_5 is
    for i in (0..10)
    variant true     # 5. should flag an error: wrong type of variant
    do
      say "i=$i"

fuzion_runtime_stackoverflow =>

  # with stackoverflow instated

  fuzion.runtime.stackoverflow
    .try ()->
      say (
        for res := [0].as_list, res.concat_list res
            i in 0..30000 do
        else
          res
          )
    .catch say

  # with runtime.fault instated

  fuzion.runtime.fault
    .try ()->
      say (
        for res := [0].as_list, res.concat_list res
            i in 0..30000 do
        else
          res
          )
    .catch say

  #
  some_effect : effect is
    public redef finally unit =>
      say "called finally"

  # with stackoverflow instated and some inner effect
  # that needs to be finalized

  fuzion.runtime.stackoverflow
    .try ()->
      some_effect ! ()->
        say (
          for res := [0].as_list, res.concat_list res
              i in 0..30000 do
          else
            res
            )
    .catch say

  # with runtime.fault instated and some inner effect
  # that needs to be finalized

  fuzion.runtime.fault
    .try ()->
      some_effect ! ()->
        say (
          for res := [0].as_list, res.concat_list res
              i in 0..30000 do
          else
            res
            )
    .catch say

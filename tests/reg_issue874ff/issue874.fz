# extended second example from #923, using nested child and nested parent
#
q is
  b : aaa is
    redef as_string => "q.b"

r is
  a is
    x a.this =>
      a.this
    redef as_string => "r.a"

c : r.a is
  redef as_string => $"c"

say q.b.x
say r.a.x
say c.x


# more complex nesting that causes error clazz to be created
#
d is
  y => 3
  x d.this =>
    redef as_string => $"d"
    d.this

t is
  e : d is
    redef y := 4
    redef as_string => "s.e"

_ := t.e.x.y


# example that creates C code that uses a unit value, resulting in C compilation failure
#
ua is
  x ua.this =>
    ua.this
  redef as_string => $"a"

ub : ua is
  redef as_string => $"b"

uq is
  v := "v"
  say v
  b : ua is
    redef as_string => "q.b"

ur is
  a is
    x a.this =>
      a.this
    redef as_string => "r.a"

uc : ur.a is
  redef as_string => $"c"

say ua.x
say ub.x
say uq.b.x
say ur.a.x
say uc.x


# example from #930
#
test_generic_this_type is

  g(T type) is
    f(o g.this) =>
      say g.this
      say o

    call_f =>
      f g.this

    redef as_string => "g $T"

  h : g bool is
    redef as_string => $"h"

  a := g i32
  b := g i32
  ha := h
  hb := h

  a.call_f
  b.call_f
  ha.call_f
  hb.call_f

  a.f b
  ha.f hb

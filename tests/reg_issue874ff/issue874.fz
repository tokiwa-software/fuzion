    redef asString => "s.e"

_ := t.e.x.y


# example that creates C code that uses a unit value, resulting in C compilation failure
#
ua is
  x ua.this.type is
    ua.this
  redef asString => "a"

ub : ua is
  redef asString => "b"

uq is
  v := "v"
  say v
  b : ua is
    redef asString => "q.b"

ur is
  a is
    x a.this.type is
      a.this
    redef asString => "r.a"

uc : ur.a is
  redef asString => "c"

say ua.x
say ub.x
say uq.b.x
say ur.a.x
say uc.x



# This is a negative test complementary to tests/effect_installed/test_effect.fz
# that includes all the failing cases.
#
test_effect_neg is

  a : mutate.
  b : mutate.
  c : mutate.
  d : mutate.
  use_a => _ := a.env
  use_b => _ := b.env
  use_c => _ := c.env
  use_a_err1 => _ := a.env       # 1. should flag an error: effect not installed
  use_b_err2 => _ := b.env       # 2. should flag an error: effect not installed
  use_c_err3 => _ := c.env       # 3. should flag an error: effect not installed
  use_d_err4 => _ := d.env       # 4. should flag an error: effect not installed
  FA : Function unit is call => use_a
  FB : Function unit is call => use_b
  FC : Function unit is call => use_c
  fa Function unit := FA
  fb Function unit := FB
  fc Function unit := FC
  a.go unit fa
  b.go unit fb
  c.go unit fc
  a.go ()->use_a
  b.go ()->use_b
  c.go ()->use_c
  a.go ()->
    b.go ()->
      c.go ()->
        use_a
        use_b
        use_c
  a.go ()->use_b_err2
  b.go ()->use_c_err3
  c.go ()->use_a_err1
  a.go ()->
    b.go ()->
      c.go ()->
        use_a
        use_b
        use_c
        use_d_err4

  # the following ones are a little tricky since use_a/b/c are also used in
  # positive cases above, so the call traces might get mixed up.
  #
  a.go ()->
    b.go ()->
      use_c      # 5. should flag an error: effect not installed
  a.go ()->
    c.go ()->
      use_b      # 6. should flag an error: effect not installed
  b.go ()->
    c.go ()->
      use_a      # 7. should flag an error: effect not installed

#
# tests passing a mutate.array to a native feature
#

native_mutate_array =>

  fzE_mem_zero_secure(ma mutate.array u8, len i64) unit => native

  mutate ! ()->

    x := (mutate.array u8).new mutate 10 4

    say x

    fzE_mem_zero_secure x 10

    say x

reg_issue2564 =>

  o := (mutate.array Any).type.new mutate

  do_it1(n i32) =>
    public redef as_string String => "do_it1 $n"
    o.add do_it1.this
    if n < 3
      do_it1 n+1

  do_it2(n i32) is
    public redef as_string String => "do_it2 $n"
    o.add do_it2.this
    if n < 3
      _ := do_it2 n+1

  do_it1 0
  _ := do_it2 0
  say o

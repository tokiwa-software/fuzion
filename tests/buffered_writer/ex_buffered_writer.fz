ex_buffered_writer =>

  write_provider : io.Write_Provider is
    redef write (b Sequence u8) outcome unit =>
      yak (String.from_bytes b)

  _ := io.buffered.writer write_provider 1024 ! ()->
    x := array u8 1023 i->0x61
    y := array u8 2049 i->0x62
    z := array u8  128 i->0x63

    _ := io.buffered.writer.env.write x
    _ := io.buffered.writer.env.write y
    _ := io.buffered.writer.env.write z
    _ := io.buffered.writer.env.flush

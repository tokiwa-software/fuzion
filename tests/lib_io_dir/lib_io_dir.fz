lm : mutate is

_ := lm.instate_self ()->lib_io_dir

lib_io_dir =>

  _ := io.file.delete "test_path/file1"
  _ := io.file.delete "test_path/file2"
  _ := io.file.delete "test_path"
  say (io.dir.make "test_path")
  say (io.dir.make "test_path")
  _ := io.file.use unit lm "test_path/file1" io.file.mode.write ()->((io.buffered.writer lm).write []).error
  _ := io.file.use unit lm "test_path/file2" io.file.mode.write ()->((io.buffered.writer lm).write []).error

  res := io.dir.use (Sequence String) "test_path" ()->
    array 3 _->io.dir.open.read.as_string

  res.val.sort.for_each say


lib_concur_Channel =>

  chan := concur.Channel u8


  concur.thread_pool _ 8 ()->

    check concur.thread_pool.env.submit ()->

      say "received {chan.has_next}"
      say "received {chan.has_next}"

    time.nano.sleep (time.duration.ms 250)

    check concur.thread_pool.env.submit ()->

      check chan <- 9
      chan.close

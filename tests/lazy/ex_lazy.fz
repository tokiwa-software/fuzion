ex_lazy is
  and(a bool, b Lazy bool) bool =>
    if a
      b
    else
      false

  x := and true true
  y := and true ()->false

  say x
  say y

  say "should not eval mtrue"
  x0 := and !true mtrue
  say "should eval mtrue"
  y0 := and true mtrue

  mtrue => say "eval mtrue!"; true

  lst(T type, h T, t Lazy (list T)) list T =>
    ref : Cons T (list T)
      head => h
      tail => t

  once => say "eval once!"; lst 1 once

  say "x"
  say (once.take 10)
  say "y"

  type_of2(W type, x Lazy W) Type => W
  # NYI: should work but currently does not:
  # say (type_of2 42)
  say (type_of2 ()->42)

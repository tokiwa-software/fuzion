encodings_html =>
  test_cases =>
    [
      ("<div>", "&lt;div&gt;"),
      ("Tom & Jerry", "Tom &amp; Jerry"),
      ("\"Hello\"", "&quot;Hello&quot;"),
      ("'Single quotes'", "&#39;Single quotes&#39;"),
      ("<a href=\"#\">Link</a>", "&lt;a href=&quot;#&quot;&gt;Link&lt;&#x2F;a&gt;"),
      ("üòä <3 & \"fun\"", "üòä &lt;3 &amp; &quot;fun&quot;"),
      ("„Åì„Çì„Å´„Å°„ÅØ <‰∏ñÁïå>", "„Åì„Çì„Å´„Å°„ÅØ &lt;‰∏ñÁïå&gt;"),
      ("R√©sum√© & caf√©", "R√©sum√© &amp; caf√©"),
      ("<img src=x onerror=alert(1)>", "&lt;img src=x onerror=alert(1)&gt;"),
      ("<svg><script>alert('x')</script></svg>", "&lt;svg&gt;&lt;script&gt;alert(&#39;x&#39;)&lt;&#x2F;script&gt;&lt;&#x2F;svg&gt;"),
      ("<body onload=alert(document.cookie)>", "&lt;body onload=alert(document.cookie)&gt;")
    ]

  for test_case in test_cases do
    encoded := encodings.html.encode test_case.0 false
    if encoded = test_case.1
      say "PASSED: {test_case}"
    else
      say "FAILED: {test_case} got {encoded}"

process_utf8 =>


  # create string of given byte size
  get_str(byte_size i32) =>
    ref : String is
      public redef utf8 Sequence u8 =>
        (1..byte_size)
          .map u8 (x -> codepoint.type.zero_char)


  test(str String, f () -> outcome unit) =>
    say "===  Test: $str  ==="
    match f()
      e error => say e
      * =>


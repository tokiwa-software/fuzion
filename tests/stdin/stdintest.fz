stdintest =>

  read(n i32) => io.stdin.read n
  read_line => io.stdin.read_line

  a := read 1
  # read 0 should not lead to nextByte beeing called
  read 0
  b := read 1
  # read 0 should not lead to nextByte beeing called
  read 0
  # read 1 utf8
  smiley := read 1

  # printing repeatedly should always yield the same string
  say "ðŸ˜€: $smiley"
  say "ðŸ˜€: $smiley"
  say "b: $b"
  say "b: $b"
  say "a: $a"
  say "a: $a"


  line := read_line
  line2 := read_line

  # printing repeatedly should always yield the same string
  say "%sðŸ˜€: $line"
  say "%sðŸ˜€: $line"
  say "123456: $line2"
  say "123456: $line2"

  # when stdin is empty, read_line should return an empty string
  say "error: $read_line."
  say "nothing: {read 1}."

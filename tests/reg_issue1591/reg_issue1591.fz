reg_issue1591 is

  nil_option(T type) option T is nil
  val_option(T type, v T) option T is v

  a(T type, x option T) =>
    match x
      v T => "val: $v"
      nil => "nil!"

  b(T type, x option T) =>
    match x
      nil => "nil!"
      v T => "val: $v"

  chck (a (nil_option i32)) "nil!"
  chck (a (val_option 132)) "val: 132"
  chck (a (nil_option nil)) "nil!"
  chck (a (val_option nil)) "val: nil"

  chck (b (nil_option i32)) "nil!"
  chck (b (val_option 132)) "val: 132"
  chck (b (nil_option nil)) "nil!"
  chck (b (val_option nil)) "val: nil"

  chck(a, b String) =>
    if a = b
      say "PASSED: $a = $b"
    else
      say "** FAILED **: $a /= $b"

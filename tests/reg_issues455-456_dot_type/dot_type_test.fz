# simple regression test for issues #455, #456 and #457 using '.type'
# expressions
#

# example from issue #455
testType0 is
  t is
  say testType0.t.type

# example from issue #457
testType1 is
  t is
  say (testType1.t.type)

# example from issue #456
testTypes is
  t is
  say (testTypes.t.type)     # works
  x := testTypes.t.type
  say x                      # crashes

testType0
testType1
testTypes
unit

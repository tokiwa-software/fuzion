SCRIPTPATH="$(dirname "$(readlink -f "$0")")"
JAVA_STACKSIZE=16
FUZION_HOME=$(realpath -s "$SCRIPTPATH/../")

cd "$SCRIPTPATH"/../

java -Xss${JAVA_STACKSIZE}m -Dfuzion.home="$FUZION_HOME" -Dfile.encoding=UTF-8 -jar lsp.jar dev.flang.lsp.Main "$@"

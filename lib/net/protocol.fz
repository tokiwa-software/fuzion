# defines constants for network protocols that
# can be used for network communication.
# usually there is only one possible protocol
# for each pair of family and socket type.
#
protocol is

  tcp is
    redef as_string => "TCP"

  udp is
    redef as_string => "UDP"

  val : choice tcp udp nil is
    as_num i32 is
      match val.this
        tcp  => 6
        udp  => 17
        nil  => -1

    redef as_string =>
      match val.this
        t tcp   => t.as_string
        u udp   => u.as_string
        nil     => "none"


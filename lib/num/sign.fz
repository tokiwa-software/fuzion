# the sign of a number
#
# this can be plus or minus
#
module sign : choice num.plus num.minus, property.equatable is

  module is_plus =>
    match sign.this
      num.plus => true
      num.minus => false

  # equality: are these signs equal?
  #
  module fixed type.equality(a, b num.sign) bool is
    match a
      num.plus =>
        match b
          num.plus => true
          num.minus => false
      num.minus =>
        match b
          num.plus => false
          num.minus => true

  module redef as_string String is
    match sign.this
      num.plus => ""
      num.minus => "-"

# NYI: UNDER DEVELOPMENT: define common benchmark interface, refator to use this
read_10mb_file =>

  read_file(str String) outcome (array u8) =>
    io.file.use str io.file.mode.append ()->
      sz := (io.file.stat str false).val.size
      io.file.open.mmap 0 sz ()->
        array u8 sz.as_i32 i->
          io.file.mapped_buffer.env[i.as_i64]

  read_file2(str String) outcome (Sequence u8) =>
    io.file.use str io.file.mode.read ()->
      (io.buffered io.file.file_mutate).read_fully

  f := "/tmp/file"

  a := array u8 1E7 x->65
  s := _ : String is
         public redef utf8 Sequence u8 => a

  io.file.write (path.of f) s .or_panic

  say <| io.file.stat.stats f

  test(arg String) =>
    say "mmap: $arg iterations/s"
    say <| bench
      (time.duration.s 1)
      (time.duration.s 10)
      (()->
       check read_file "$arg" .val.count=1E7
        )
    say "stdlib: $arg iterations/s"
    say <| bench
      (time.duration.s 1)
      (time.duration.s 10)
      (()->
       check read_file2 "$arg" .val.count=1E7
        )

  test f

  io.file.delete f .or_panic
